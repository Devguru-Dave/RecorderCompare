<Window
    x:Class="RecorderCompare.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RecorderCompare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid x:Name="ControlsGrid" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Margin="10">
                <Button
                    x:Name="PickerButton"
                    Margin="10"
                    Click="ButtonClickHandler"
                    Content="Use Picker" />
                <ToggleButton
                    x:Name="IsMouseCapture"
                    Margin="10"
                    Click="ToggleButtonClickHandler"
                    Content="IsMouse"
                    IsChecked="True"
                    IsEnabled="False" />
                <ToggleButton
                    x:Name="IsBorder"
                    Margin="10"
                    Click="ToggleButtonClickHandler"
                    Content="IsBorder"
                    IsChecked="True"
                    IsEnabled="False" />
                <ToggleButton
                    x:Name="IsAffinity"
                    Margin="10"
                    Click="ToggleButtonClickHandler"
                    Content="IsAffinity"
                    IsChecked="False"
                    IsEnabled="False" />
            </StackPanel>
            <Button
                x:Name="StopButton"
                Grid.Row="1"
                Margin="10"
                Click="ButtonClickHandler"
                Content="Stop Capturing" />
        </Grid>
        <Grid Grid.Column="1">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                    <TextBlock
                        x:Name="LeftFrameTime"
                        FontSize="25"
                        Text="{x:Bind mainViewModel.MainViewSku.Title, Mode=OneWay}" />
                </Grid>
                <Grid
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                    <TextBlock
                        x:Name="LeftFrame"
                        FontSize="25"
                        Text="LeftFrame" />
                </Grid>
                <Grid
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                    <TextBlock
                        x:Name="RightFrameTime"
                        FontSize="25"
                        Text="RightFrameTime" />
                </Grid>
                <Grid
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                    <TextBlock
                        x:Name="RightFrame"
                        FontSize="25"
                        Text="RightFrame" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
